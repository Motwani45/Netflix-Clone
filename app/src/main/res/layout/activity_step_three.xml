<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.StepThree">
    <include layout="@layout/toolbarstepthree"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
           android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <include layout="@layout/lockicon" />
        </RelativeLayout>
    <TextView
        android:id="@+id/step3of3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="STEP 3 OF 3"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Setup your payment"
        android:textStyle="bold"

        android:textColor="@color/black"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Your membership starts as soon as you complete your payment"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

        <LinearLayout
            android:id="@+id/paymentlinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="@drawable/buttonstroke">

            <TextView
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="Credit Card Or Debit Card"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
            <Space
                android:layout_width="3dp"
                android:layout_height="3dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/mastercard"/>
            <Space
                android:layout_width="3dp"
                android:layout_height="3dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/visacard"/>
            <Space
                android:layout_width="3dp"
                android:layout_height="3dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/lastcard"/>
            <Space
                android:layout_width="3dp"
                android:layout_height="3dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/americanexpress"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_chevron_right_24"/>


        </LinearLayout>
    </LinearLayout>
        

</androidx.constraintlayout.widget.ConstraintLayout>